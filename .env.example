# Next.js Frontend Configuration

# API Configuration - Update with your backend URL
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# OpenAI API (for frontend voice features)
NEXT_PUBLIC_OPENAI_API_KEY=your-openai-api-key-here

# App Configuration
NEXT_PUBLIC_APP_NAME=Smart Todo AI
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags - Enable/disable features
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_VOICE_INPUT=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Optional: Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Optional: Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=false

# Optional: Authentication (if implementing user auth later)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Supabase Configuration (if using Supabase auth in frontend)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Optional: External Integrations
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-key
